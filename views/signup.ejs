<% layout("layout") %>

<div class="d-flex justify-content-center align-items-center" 
     style="height:80vh;">

    <form method="POST" action="/signup" 
          class="glass-card p-4 shadow-lg"
          style="width:350px;border-radius:12px;">

        <h2 class="text-center mb-3 text-success fw-bold">
            <i class="fas fa-user-plus"></i> Signup
        </h2>

        <input name="username" class="form-control mb-3" 
               placeholder="Choose Username" required>

        <input name="password" type="password" class="form-control mb-3" 
               placeholder="Create Password" required>

        <button class="btn btn-success w-100 fw-bold">
            <i class="fas fa-check-circle"></i> Create Account
        </button>

        <p class="text-center mt-3 text-light">
            Already have an account? 
            <a href="/login" class="text-info fw-bold">Login</a>
        </p>
    </form>
</div>
